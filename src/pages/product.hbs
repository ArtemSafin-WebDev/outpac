{{#extend "layout"}}
{{#content "main"}}


<section class="product">
    <div class="container">
        <div class="product__row">
            <div class="product__left-col js-sticky-product-images">
                <div class="product__images">
                    <div class="product__image-block">
                        <a href="img/product-1/1.jpg" class="product__image-link" data-fancybox="product-gallery">
                            <img src="img/product-1/1.jpg" alt="" class="product__image">
                        </a>
                    </div>
                    <div class="product__image-block">
                        <a href="img/product-1/2.jpg" class="product__image-link" data-fancybox="product-gallery">
                            <img src="img/product-1/2.jpg" alt="" class="product__image">
                        </a>
                    </div>
                    <div class="product__image-block">
                        <a href="img/product-1/3.jpg" class="product__image-link" data-fancybox="product-gallery">
                            <img src="img/product-1/3.jpg" alt="" class="product__image">
                        </a>
                    </div>
                    <div class="product__image-block">
                        <a href="img/product-1/4.jpg" class="product__image-link" data-fancybox="product-gallery">
                            <img src="img/product-1/4.jpg" alt="" class="product__image">
                        </a>
                    </div>
                </div>
            </div>
            <div class="product__right-col">
                <div class="product__content-wrapper js-sticky-product-sidebar">
                    <div class="breadcrumbs product__breadcrumbs">
                        <ul class="breadcrumbs__list">
                            <li class="breadcrumbs__list-item">
                                <a href="#" class="breadcrumbs__link">
                                    Главная

                                    <svg width="16" height="16" aria-hidden="true" class="icon-arrow-right">
                                        <use xlink:href="#arrow-right"></use>
                                    </svg>
                                </a>
                            </li>
                            <li class="breadcrumbs__list-item">
                                <a href="#" class="breadcrumbs__link">
                                    Одежда
                                    <svg width="16" height="16" aria-hidden="true" class="icon-arrow-right">
                                        <use xlink:href="#arrow-right"></use>
                                    </svg>
                                </a>
                            </li>
                            <li class="breadcrumbs__list-item active">
                                <a href="#" class="breadcrumbs__link">
                                    Рубашки
                                    <svg width="16" height="16" aria-hidden="true" class="icon-arrow-right">
                                        <use xlink:href="#arrow-right"></use>
                                    </svg>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="product__content">
                        <div class="product__season">
                            SUMMER 2019
                        </div>
                        <h1 class="product__title">
                            Худи Saturdays Surf<br>
                            <em>
                                Оранжевый
                            </em>
                            <a href="#" class="product__fav-link">
                                <svg width="16" height="16" aria-hidden="true" class="icon-star">
                                    <use xlink:href="#star"></use>
                                </svg>
                            </a>
                        </h1>
                        <div class="product__prices">
                            <div class="product__new-price">
                                14 290
                            </div>
                            <div class="product__price-divider">
                                /
                            </div>
                            <div class="product__old-price">
                                Старая цена 22 900
                            </div>
                        </div>
                        <form class="product__variants" method="POST" action="/">
                            <div class="product__variants-row">
                                <div class="product__variants-col">
                                    <div class="product__variants-select">
                                        <select name="size" class="js-custom-select">
                                            <option value="XS">
                                                XS
                                            </option>
                                            <option value="S">
                                                S
                                            </option>
                                            <option value="M">
                                                M
                                            </option>
                                            <option value="L">
                                                L
                                            </option>
                                            <option value="XL">
                                                XL
                                            </option>
                                            <option value="XXL">
                                                XXL
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="product__variants-col">
                                    <div class="product__variants-select">
                                        <select name="color" class="js-custom-select">
                                            <option value="" placeholder>Цвет</option>
                                            <option value="white">Белый</option>
                                            <option value="black">Черный</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <button class="product__variants-add-to-cart">
                                В корзину
                            </button>
                        </form>
                        <a href="#" class="product__sizes-table-link js-open-sizes-table">
                            Таблица размеров
                        </a>
                        <div class="product__description">
                            <h3 class="product__description-heading">
                                Описание:
                            </h3>
                            <div class="product__description-text">
                                <p>
                                    100% cotton. Printed front
                                </p>
                                <p>
                                    Когда речь заходит об игре в баскетбол, каждый ассоциативно вспоминает "Джорданы" и
                                    неизмеримый вклад компании Nike в спортивную индустрию. Несмотря на то, что модель
                                    Air
                                    Max 98 — полноценные ретро-раннеры, дизайнеры отдают дань NBA All-Star, выпуская
                                    цветовое решение ‘Spirit Teal’. Итерация получила фирменные цвета в честь
                                    профессионального баскетбольного клуба «Шарло́тт Хорнетс», которым владеет сам Майкл
                                    Джордан.
                                </p>
                                <p style="color: #FF0000; text-transform: uppercase;">
                                    FINAL SALE
                                </p>
                            </div>
                        </div>
                        <a href="#" class="product__delivery-info-link js-delivery-info-open">
                            Информация о доставке
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
 {{> recommended }}

{{/content}}
{{/extend}}